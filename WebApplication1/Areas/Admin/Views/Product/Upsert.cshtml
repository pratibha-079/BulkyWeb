@model ProductVM
<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient m-lg-0 py-2">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">@(Model.Product.Id != 0?"Update" : "Create") Product</h2>
            </div>
        </div>
        </div>
        <div class="card-body p-4">
            <form method="post" enctype="multipart/form-data">
                <input asp-for="Product.Id" hidden />
                <input asp-for="Product.ImageUrl" hidden />
                <div class="row">
                    <div class="col-18">
                    <div class="border p-3 my-8 mb-5">
                        @*<div class="row pb-2">
                        <h2 class="text-primary">@(Model.Product.Id != 0 ? "Update" : "Create") Product</h2>
                        <hr />
                        </div>*@
                        <div asp-validation-summary="All"></div>
                        <div class="mb-3 p-1">
                            <label asp-for="Product.Title" class="p-0">Title</label>
                            <input asp-for="Product.Title" type="text" class="form-control" />
                            <span asp-validation-for="Product.Title" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Product.Description" class="p-0">Description</label>
                            <input asp-for="Product.Description" type="text" class="form-control" />
                            <span asp-validation-for="Product.Description" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Product.ISBN" class="p-0">ISBN</label>
                            <input asp-for="Product.ISBN" type="text" class="form-control" />
                            <span asp-validation-for="Product.ISBN" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Product.Author" class="p-0">Author</label>
                            <input asp-for="Product.Author" type="text" class="form-control" />
                            <span asp-validation-for="Product.Author" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Product.ListPrice" class="p-0">List Price</label>
                            <input asp-for="Product.ListPrice" type="text" class="form-control" />
                            <span asp-validation-for="Product.ListPrice" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Product.Price" class="p-0">Price</label>
                            <input asp-for="Product.Price" type="text" class="form-control" />
                            <span asp-validation-for="Product.Price" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Product.Price50" class="p-0">Price50</label>
                            <input asp-for="Product.Price50" type="text" class="form-control" />
                            <span asp-validation-for="Product.Price50" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Product.ImageUrl" class="p-0">ImageUrl</label>
                            <br />
                            <input type="file" name="file" class="form-control" />
                        </div>
                        <div class="mb-3">
                            <label asp-for="@Model.Product.CategoryId" class="p-0">Select Category</label>
                            <br />
                            <select asp-for="@Model.Product.CategoryId" style="border-block" class="form-control" asp-items="@Model.CategoryList">
                                <option disabled selected>--Select Category--</option>
                            </select>
                            <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Product.Price100" class="p-0">Price100</label>
                            <input asp-for="Product.Price100" type="text" class="form-control" />
                            <span asp-validation-for="Product.Price100" class="text-danger"></span>
                        </div>
                        <div class="row">
                            <div class="col-6 col-md-3">
                                @if (Model.Product.Id != 0)
                                {
                                    <button type="submit" class="btn btn-primary form-control">Update</button>
                                }
                                else
                                {
                                    <button type="submit" class="btn btn-primary form-control">Create</button>
                                }

                            </div>
                            <div class="col-6 col-md-3">
                                <a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary border form-control">
                                    Back to List
                                </a>
                            </div>
                        </div>
                    </div>
                    </div>
                    <div class="col-2 float-end pb-lg-5">
                        <img src="@Model.Product.ImageUrl" width="100%"
                        style="border-radius: 5px; border:1px solid #bbb9b9"/>
                    </div>
                </div>
                
            </form>

        </div>
    </div>

@section Scripts{
    @{
    <partial name="_ValidationScriptsPartial" />
    }
}